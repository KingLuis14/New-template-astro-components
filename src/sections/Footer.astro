---
import { Icon } from "astro-icon/components";
---

<footer class="footer">
  <div class="footer__container wrapper">
    <div class="footer__icons">
      <a href="#" class="icon-circle footer__icon">
        <Icon name="github" size={20} color="var(--color-blue-900)" />
      </a>
      <a href="#" class="icon-circle footer__icon">
        <Icon name="discord" size={20} color="var(--color-blue-900)" />
      </a>
      <a href="#" class="icon-circle footer__icon">
        <Icon name="facebook" size={20} color="var(--color-blue-900)" />
      </a>
    </div>
  </div>
  <p>todos los derechos no reservados</p>
</footer>

<style lang="scss" is:global>
  .footer {
    display: grid;
    padding-block: calc( var(--padding-section) / 2);
    row-gap: 1.5rem;
    // gap: 1.5rem;
    background-color: var(--color-blue-800);

    &__container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      // background-color: crimson;
    }

    &__icons {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    &__icon {
      --width-circle-icon: 40px;
      --color-circle-icon: white;
    }
  }
</style>
